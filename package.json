{
  "name": "react-webpack-rails-tutorial",
  "version": "0.0.1",
  "engines": {
    "node": "5.10.0",
    "npm": "3.5.0"
  },
  "scripts": {
    "preinstall": "npm install -g bower && npm install -g webpack && bower install",
    "postinstall": "cd client && npm install",
    "rails-server": "foreman start -f Procfile.dev",
    "rs": "foreman start -f Procfile.dev",
    "build:production:client": "(cd client && npm run build:production:client --silent)",
    "build:client": "(cd client && npm run build:client --silent",
    "build:dev:client": "(cd client && npm run build:dev:client --silent)",
    "test": "rspec"
  }
}
